.weui-search-bar {
  position: relative;
  padding: 8px 10px;
  /* display: -webkit-box;
  display: -webkit-flex; */
  display: flex;
  justify-content: flex-end; /* 将内容分散对齐，将搜索框置于右侧 */
  box-sizing: border-box;
  background-color: #EFEFF4;
  border-top: 1rpx solid #D7D6DC;
}
.weui-icon-search_in-box {
  position: absolute;
  width: 40rpx;
  left: 20rpx;
  top: 22rpx;
}
.weui-search-bar__form {
  position: relative;
/*  -webkit-box-flex: 1;
  -webkit-flex: auto;*/
          flex: auto;
  max-width: 85%;
  border-radius: 40rpx;
  background: #FFFFFF;
  border:1px solid #707070;
  display: flex; /* 使用 flex 布局 */
  justify-content: flex-end; /* 将内容右对齐 */
}
.weui-search-bar__box {

  position: relative;
  padding-left: 30px;
  padding-right: 30px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}
.weui-search-bar__input {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 35rpx;
}
.scan-button {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  width: 50px;
  height: 50px;
  /* background-color: #fff; */
  border-radius: 50%;
}

.scan-icon {
  width: 30px;
  height: 30px;
  /* fill: #fff; 图标颜色为白色 */
}

.weui-search-bar__cancel-btn {
  margin-left: 10px;
  line-height: 28px;
  color: #09BB07;
  white-space: nowrap;
}
