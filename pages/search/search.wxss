/* pages/search/search.wxss */
.weui-search-bar {
  position: relative;
  padding: 8px 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color:  #f0f0f0;
  border-top: 1rpx solid #D7D6DC;
  border-bottom: 1rpx solid #D7D6DC;
}
.weui-icon-search_in-box {
  position: absolute;
  width: 40rpx;
  left: 20rpx;
  top: 22rpx;
}
.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
          flex: auto;
  border-radius: 21px;
  background: #FFFFFF;
  border: 3rpx solid #707070;
}
.weui-search-bar__box {
  position: relative;
  padding-left: 30px;
  padding-right: 30px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}
.weui-search-bar__input {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 35rpx;
}
.weui-search-bar__cancel-btn {
  border: 3rpx solid #707070;
  border-radius: 30rpx;
  margin-left: 10px;
  width: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  line-height: 28px;
  color: #5C6BC0;
  font-weight: 600;
  font-size: 35rpx;
  white-space: nowrap;
}
.weui-search-bar__cancel-btn2 {
  border: 2px solid #707070;
  border-radius: 30rpx;
  width: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 10px;
  line-height: 28px;
  background-color:#5C6BC0 ;
  color: white;
  font-weight: 700;
  font-size: 35rpx;
  white-space: nowrap;
}
.menuList2 {
  background: white;
  padding: 30rpx 20rpx;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #ddd;
  box-shadow: 5rpx 5rpx 5rpx 5rpx gray;
}
.P_small {
  color: #999;
  font-size: 28rpx;
}